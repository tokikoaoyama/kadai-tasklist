<h1>To Do List</h1>
<% if @tasks.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>status</th>
                <th>to do list</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= link_to task.id, task %></td>
                    <td><%= task.status %></td>
                    <td><%= task.content %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <%= paginate @tasks %>
    </div>
<% end %>

<%= link_to 'Create Task', new_task_path, class: "btn btn-primary" %>