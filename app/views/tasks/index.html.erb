<h1>TaskList</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>status</th>
            <th>tasklist</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.status %></td>
                <td><%= task.content %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<div>
    <%= paginate @tasks %>
</div>
<%= link_to 'Create Task', new_task_path, class: "btn btn-primary" %>
